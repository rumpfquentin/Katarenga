<Button>:
    orientation: 'horizontal'
    font_size: "40sp"
    background_color: 1,0,1,1

<Cell@Button>:
    background_color: 1,1,1,1

<BoardView>:
    id: board_view
    orientation: 'vertical'
    padding: 16
    spacing:12

    Label:
        id: status_lbl
        text: root.status
        size_hint_y: None
    RecycleView:
        id: rv
        viewclass:  "Cell"
        RecycleGridLayout:
            cols: 8
            default_size: (50,50)
            default_size_hint: (None, None)
            width: self.minimum_width
            height: self.minimum_height


BoxLayout:
    orientation: "vertical"
    padding: 16
    spacing:12

    Label:
        orientation: 'horizontal'
        size_hint_y: 0.3
        font_size: "70sp"
        text: "Katarenga"
        height: self.texture_size[1] + 20
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        height: 80
        Button:
            size_hint: None, None
            size: 250,100
            text: 'start'
            on_release: app.start_game()
    BoardView:
        id: board_view