<PlayerDropDown@DropDown>:

    Button: 
        text: 'Human'
        size_hint_y: None
        size_hint_x: 50
        font_size:32
        on_release:
            app.change_players()

    Button: 
        text: 'AI'
        size_hint_y: None
        size_hint_x: 50
        font_size:32


<DropdDownButton@Button>:
    Button:
        pos_hint: {"center_x": 0.75, "center_y": 0.75}
        text: root.txt
        font_size: 32
        size_hint: 0.2,0.08
        on_release: 
            root.DifficultyDropdown.open(self)

<Cell>:
    background_normal: ''
    background_down: ''
    background_disabled_normal: ''   
    background_disabled_down: ''    
    border: 0,0,0,0   

<BoardView>:
    name: 'Board'
    orientation: "vertical"
    padding: dp(16)
    spacing: dp(12)
        
    FloatLayout:
        BoxLayout:
            orientation: "vertical"
            padding: dp(16)
            spacing: dp(12)

            size_hint: 1, 0.1
            Button:
                background_color: (0,0,0)
                size_hint: None, None
                size: dp(100), dp(40)
                text: "Menu"
                pos_hint: {"center_x":0.5, "center_y": 1}
                on_release: 
                    app.root.current = 'Menu'
                    root.manager.transition.direction = 'down'

        RecycleView:
            id: rv
            viewclass: "Cell"
            data: []
            size_hint: None, None      
            do_scroll_x: False
            do_scroll_y: False
            bar_width: 0
            pos_hint: {"center_x": .5, "center_y": 0.5}

            RecycleGridLayout:
                cols: 10
                default_size: dp(56), dp(56)  
                default_size_hint: None, None
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                spacing: dp(2)
<WinningScreen>:
    name: "Win"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            text: root.message
            font_size: dp(70)
            halign : "center"
            valign: 'middle'
        Button:
            size_hint: None, None
            size: dp(70), dp(50)
            text: 'Menu'
            on_release:
                app.root.current = 'Menu'
                root.manager.transition_direction = 'down'

<SetupScreen>:
    name: 'Setup'
    FloatLayout:
        size_hint: 1,1
        Button:
            pos_hint: {"center_x": 0.75, "center_y": 0.75}
            text: "Difficulty"
            font_size: 32
            size_hint: 0.2,0.08
            on_release: 
                root.DifficultyDropdown.open(self)
        DropdDownButton:
            pos_hint: {"center_x": 0.75, "center_y": 0.25}

        DropdDownButton:
            pos_hint: {"center_x": 0.25, "center_y": 0.25}


<MenuScreen>:
    name: 'Menu'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text: 'Katarenga'
            font_size: 50
        FloatLayout:
            size_hint: 1,1
            FloatLayout:
                size_hint: 1,1
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                Button:
                    pos_hint: {"center_x": 0.25, "center_y": 1}
                    text: "NEW GAME"
                    font_size: 32
                    size_hint: 0.2,0.15
                    on_release: 
                        app.new_game()
                        app.root.current = 'Setup'
                        root.manager.transition.direction = 'up'
                        app.start_move()
                Button:
                    pos_hint: {"center_x": .75, "center_y": 1}
                    text: "Load Game"
                    font_size: 32
                    size_hint: 0.2,0.15
                    on_release: 
                        app.load_game()
                        app.root.current = 'Board'
                        root.manager.transition.direction = 'up'
                        app.start_move()
                Button:
                    pos_hint: {"center_x": 0.5, "center_y": 0.4}
                    text: "Save Game"
                    font_size: 32
                    size_hint: 0.2,0.15
                    on_release: 
                        app.save_game()
        

                    

            
            



WindowManager:
    MenuScreen:
    BoardView:
    WinningScreen:
    SetupScreen: