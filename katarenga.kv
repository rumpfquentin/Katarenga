#:kivy 2.3.0

<Cell>:
    background_normal: ''
    background_down: ''
    background_disabled_normal: ''   
    background_disabled_down: ''    
    border: 0,0,0,0   

<BoardView>:
    orientation: "vertical"
    padding: dp(16)
    spacing: dp(12)

    FloatLayout:

        RecycleView:
            id: rv
            viewclass: "Cell"
            data: []
            size_hint: None, None      
            do_scroll_x: False
            do_scroll_y: False
            bar_width: 0
            pos_hint: {"center_x": .5, "center_y": 1}

            RecycleGridLayout:
                cols: 8
                default_size: dp(56), dp(56)  
                default_size_hint: None, None
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                spacing: dp(2)

BoxLayout:
    orientation: "vertical"
    padding: dp(16)
    spacing: dp(12)
    FloatLayout:
        size_hint: 1, 0.2
        Button:
            size_hint: None, None
            size: dp(100), dp(40)
            text: "Katarenga"
            pos_hint: {"center_x":0.5, "center_y": .5}
            on_release: app.start_game()
    BoardView:
        size_hint:1,1