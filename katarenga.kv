<Button>:
    orientation: 'horzontal'
    font_size: "40sp"
    background_color: 1,0,1,1

BoxLayout:
    orientation: "vertical"
    padding: 16
    spacing:12

    Label:
        orientation: 'horizontal'
        size_hint_y: 0.3
        font_size: "70sp"
        text: "Katarenga"
        height: self.texture_size[1] + 20
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        heigth: 80
        Button:
            size_hint: None, None
            size: 250,100
            text: 'start'
            on_release: app.start_game()
